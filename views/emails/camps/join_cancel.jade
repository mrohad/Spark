doctype html(lang="he")
head
    meta(http-equiv='Content-Type', content='text/html; charset=UTF-8')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    link(href='https://fonts.googleapis.com/css?family=Slabo+27px|Varela+Round', rel='stylesheet')
    style(type='text/css').
        body {
            font-family: 'Varela Round', sans-serif;
            background: #eee;
        }

        .wrapper {
            max-width: 320px;
            margin: 0 auto;
            padding: 2em 0;
        }

        .card {
            padding: 35px 20px 45px;
            background-color: #FFF;
            border-radius: 4px;
            box-shadow: 0 6px 10px 0 rgba(0, 0, 0, 0.3), 0 2px 2px 0 rgba(0, 0, 0, 0.2);
            overflow: hidden;
        }

        .card__text--center {
            text-align: center;
        }

        .btn {
            margin: 2em;
            color: red;
            padding: 10px 20px;
            background: transparent;
            border: 1px solid red;
            border-radius: 50px;
            text-decoration: none;
        }
        .btn:hover {
            background: red;
            color: #FFF;
        }

        p, a {
            margin-bottom: 40px;
        }

body
    .wrapper
        .card.card__text--center
            span Midburn Spark
            h1='ביטול חברות במחנה'
            p.subtitle(dir='rtl')
                span שלום #{camp_manager.first_name},
                br
                span #{user.first_name} #{user.last_name} (#{user.email}) ביטל את השתתפותו במחנה שלך "#{camp.camp_name_he}"
            p(dir='rtl')
                span לפאנל ניהול חברים היכנס בלינק הבא
                    a(href='//spark.midburn.org/') Spark
            h1 Cancellation of camp membership
            p.subtitle
                span Hello #{camp_manager.first_name},
                br
                span #{user.first_name} #{user.last_name} (#{user.email}) has canceled his join request of your camp "#{camp.camp_name_en}"
            p
                span For camp members management panel follow this link
                    a(href='//spark.midburn.org/') Spark